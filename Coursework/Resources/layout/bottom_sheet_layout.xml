<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
        android:text="@string/new_event"
        android:gravity="center"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/title"
        android:drawablePadding="10sp"
        android:layout_height="47.0dp"
        android:background="@drawable/input_border"
        android:hint="@string/title"
        android:textColorHint="#D3D3D3"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textSize="17dp"
        android:textColor="#9C9C9C"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:layout_marginLeft="30.0dp"
        android:layout_marginRight="30.0dp"
        android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material">
    </EditText>

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/gray_location"
        android:drawablePadding="10sp"
        android:layout_height="47.0dp"
        android:background="@drawable/input_border"
        android:hint="@string/location"
        android:textColorHint="#D3D3D3"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textSize="17dp"
        android:textColor="#9C9C9C"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:layout_marginLeft="30.0dp"
        android:layout_marginRight="30.0dp"
        android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material">
    </EditText>

    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="10sp"
        android:layout_height="47.0dp"
        android:background="@drawable/input_border"
        android:text="@string/start"
        android:textColorHint="#D3D3D3"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:autoSizeTextType="uniform"
        android:textColor="#9C9C9C"
        android:textStyle="bold"
        android:layout_marginLeft="30.0dp"
        android:layout_marginRight="30.0dp"
        android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"/>

    <TextView
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="10sp"
        android:layout_height="47.0dp"
        android:background="@drawable/input_border"
        android:text="@string/end"
        android:textColorHint="#D3D3D3"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:autoSizeTextType="uniform"
        android:textColor="#9C9C9C"
        android:textStyle="bold"
        android:layout_marginLeft="30.0dp"
        android:layout_marginRight="30.0dp"
        android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/description"
        android:drawablePadding="10sp"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:background="@drawable/input_border"
        android:hint="@string/description"
        android:textColorHint="#D3D3D3"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textSize="17dp"
        android:textColor="#9C9C9C"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:layout_marginLeft="30.0dp"
        android:layout_marginRight="30.0dp"
        android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material">
    </EditText>

    <Button
        android:text="@string/add_event_to_calendar"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/button_radius"
        android:layout_marginTop="10.0dp"
        android:layout_marginLeft="30.0dp"
        android:layout_marginRight="30.0dp"
        android:layout_marginBottom="@dimen/abc_select_dialog_padding_start_material"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:id="@+id/save"
        android:enabled="false"/>

</LinearLayout>